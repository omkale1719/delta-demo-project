<% layout('./layouts/boilerplate') %>
<body>
    <div class="Row"></div>
        <div class="col-8 offset-2" > <!--offset use for the margin of left side, and col-8 is for screen divide into  8 colums-->
    <h3>Insert Info</h3>
    <br><br>
    <form action="/listing/new" method="POST" novalidate class="needs-validation " enctype="multipart/form-data">
       
            <div>
            <label for="title" class="form-label">Title</label>
            <input type="text"
             name="listing[title]"
              id="title" 
               class="form-control"
                required/>
            <div class="invalid-feedback">Enter the title!</div>  
            <br><br>
            
             
        </div>
        
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="description"  class="form-control"required></textarea>
            <div class="invalid-feedback">Enter the description!</div>
            <br><br>
            <div class="mb-3"> <!--mb-3 for space-->
                <label for="image" class="form-label">upload Image</label>
                <input type="file" name="listing[image]" id="image" class="form-control" required>
            </div>
            
        </div>
        <div class="row">
            <diV class="col-md-4"> 
                <label for="price" class="form-label">Price</label>
                <input type="text" name="listing[price]" id="price" class="form-control" required>
                <div class="invalid-feedback">Enter the price!</div><br><br>
                
                </diV>
                <div class="col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" id="location" class="form-control" required>
                <div class="invalid-feedback">Enter the location!</div><br><br>
                </div>
        </div>
        
        <div>
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" id="country" class="form-control"required>
        <div class="invalid-feedback">Enter the country name!</div><br><br>
    </div>
        <button type="submit" class="btn btn-dark add-btn">Submit</button>
        <br><br>
    </form>
    </div>
    </div>
</body>
